@using RehabWithLogin.MVC.Models
@model Workout

@{
    Layout = null;
}


<!DOCTYPE html>

<html>
<head>
    <title>Workout</title>
    <link href="~/lib/bootstrap/dist/css/bootstrap.min.css" rel="stylesheet"/>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
</head>
<body>
<div class="container">
<div class="modal fade" id="updateNoteModal" tabindex="-1" role="dialog" aria-labelledby="updateNoteModal-label">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
                <h4 class="modal-title" id="updateNoteModal-label">Update notes</h4>
            </div>
            <div class="modal-body">
                <form role="form" id="updateNotesForm">
                    <div class="form-group">
                        <label class="control-label" for="updateNotesInput">Notes</label>
                        <textarea type="text" class="form-control" id="updateNotesInput"></textarea>
                    </div>
                    <button type="submit" class="btn btn-default">Save</button>
                </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
            </div>
        </div>
    </div>
</div>
<div class="modal fade" id="exerciseModal" tabindex="-1" role="dialog" aria-labelledby="exerciseModal-label">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
                <h4 class="modal-title" id="exerciseModal-label"></h4>
            </div>
            <div class="modal-body">
                <div id="exerciseModal-body"></div>
                <pre id="videoHtml" hidden></pre>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
            </div>
        </div>
    </div>
</div>
<div class="modal fade" id="deleteExerciseModal" tabindex="-1" role="dialog" aria-labelledby="deleteExerciseModal-label">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                <h4 class="modal-title" id="deleteModal-label">Confirm delete</h4>
            </div>
            <div class="modal-body">
                
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-default" data-dismiss="modal">Cancel</button>
                <button type="button" id="confirmExerciseDeleteBtn" class="btn btn-default" data-dismiss="modal">Confirm</button>
            </div>
        </div>
    </div>
</div>
<div class="modal fade" id="newExerciseModal" tabindex="-1" role="dialog" aria-labelledby="newExerciseModal-label">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
                <h4 class="modal-title" id="newExerciseModal-label">New exercise</h4>
            </div>
            <div class="modal-body">
                <form role="form" asp-controller="Workout" asp-action="NewExercise" asp-route-workoutId="@Model.Id" method="post">
                    <div class="form-group">
                        <label class="control-label" for="exerciseNameInput">Name</label>
                        <input type="text" class="form-control" id="exerciseNameInput" name="name">
                    </div>
                    <div class="form-group">
                        <label class="control-label" for="exerciseDescriptionInput">Description</label>
                        <textarea type="text" class="form-control" id="exerciseDescriptionInput" name="description"></textarea>
                    </div>
                    <div class="form-group">
                        <label class="control-label" for="toolSelectList">Select tool</label>
                        @{
                            var currentlySelectedIndex = 0;
                        }
                        <select id="toolSelectList" class="form-control" asp-for="@currentlySelectedIndex" asp-items="@(new SelectList(ViewBag.Tools, "Id", "Name"))" name="toolId">
                            <option>Select tool</option>
                        </select>
                        <button type="button" class="btn btn-default btn-xs" onclick="$('#newTool').show()"><i class="fa fa-plus"></i> New tool</button>
                    </div>
                    <div class="form-group" hidden id="newTool">
                        <label class="control-label" for="exerciseToolInput">Name for new tool</label>
                        <input type="text" class="form-control" id="exerciseToolInput" name="toolName">
                        <hr/>
                    </div>
                    <div class="form-group">
                        <label class="control-label" for="videoUrlInput">Video URL (youtube link only!)</label>
                        <input type="url" class="form-control" id="videoUrlInput" name="videoUrl">
                    </div>
                    <div class="form-group">
                        <label class="control-label" for="exerciseSetsInput">Sets</label>
                        <input type="number" class="form-control" id="exerciseSetsInput" name="sets">
                    </div>
                    <div class="form-group">
                        <label class="control-label" for="exerciseRepsInput">Reps</label>
                        <input type="number" class="form-control" id="exerciseRepsInput" name="reps">
                    </div>
                    <div class="form-group">
                        <label class="control-label" for="exerciseResistanceInput">Resistance</label>
                        <input type="text" class="form-control" id="exerciseResistanceInput" name="resistance">
                    </div>
                    <div class="form-group">
                        <label class="control-label" for="exerciseNotesInput">Notes</label>
                        <textarea type="text" class="form-control" id="exerciseNotesInput" name="notes"></textarea>
                    </div>

                    <button type="submit" class="btn btn-default">Submit</button>
                </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
            </div>
        </div>
    </div>
</div>

<hr/>
<h3>@Model.Name</h3>
<a class="btn btn-default" asp-controller="WorkoutPlan" asp-action="Index"><i class="fa fa-arrow-circle-left"></i> Back to workouts</a>
<hr/>
<button class="btn btn-default" data-toggle="modal" data-target="#newExerciseModal"><i class="fa fa-plus-circle"></i> New exercise</button>
<hr/>
<div class="panel-group" id="collapse" role="tablist" aria-multiselectable="true">
    @for (var i = 0; i < Model.WorkoutExercises.Count; i++)
    {
        <div class="modal fade" id="updateExerciseModal-@i" tabindex="-1" role="dialog" aria-labelledby="updateExerciseModal-label-@i">
            <div class="modal-dialog" role="document">
                <div class="modal-content">
                    <div class="modal-header">
                        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                            <span aria-hidden="true">&times;</span>
                        </button>
                        <h4 class="modal-title" id="newExerciseModal-label-@i">Update exercise</h4>
                    </div>
                    <div class="modal-body">
                        <form role="form" asp-controller="Workout" asp-action="UpdateExercise" asp-route-workoutExerciseId="@Model.WorkoutExercises.ElementAt(i).Id" asp-route-exerciseId="@Model.WorkoutExercises.ElementAt(i).Exercise.Id" method="post">
                            <div class="form-group">
                                <label class="control-label" for="exerciseNameInput-@i">Name</label>
                                <input type="text" value="@Model.WorkoutExercises.ElementAt(i).Exercise.Name" class="form-control" id="exerciseNameInput-@i" name="name">
                            </div>
                            <div class="form-group">
                                <label class="control-label" for="exerciseDescriptionInput-@i">Description</label>
                                <input type="text" class="form-control" value="@Model.WorkoutExercises.ElementAt(i).Exercise.Description" id="exerciseDescriptionInput-@i" name="description">
                            </div>
                            <div class="form-group">
                                <label class="control-label" for="toolSelectList-@i">Select tool</label>
                                @{
                                    var selectedIndex = 0;
                                }
                                <select id="toolSelectList-@i" class="form-control" value="@Model.WorkoutExercises.ElementAt(i).Exercise.Tool" asp-for="@selectedIndex" asp-items="@(new SelectList(ViewBag.Tools, "Id", "Name"))" name="toolId">
                                    <option></option>
                                </select>
                                <button type="button" class="btn btn-default btn-xs" onclick="$('#newTool-@i').show()"><i class="fa fa-plus"></i> New tool</button>
                            </div>
                            <div class="form-group" hidden id="newTool-@i">
                                <label class="control-label" for="exerciseToolInput-@i">Name for new tool</label>
                                <input type="text" class="form-control" id="exerciseToolInput-@i" name="toolName">
                                <hr/>
                            </div>
                            <div class="form-group">
                                <label class="control-label" for="videoUrlInput-@i">Video URL (youtube link only!)</label>
                                <input type="url" class="form-control" id="videoUrlInput-@i" value="@Model.WorkoutExercises.ElementAt(i).Exercise.VideoUrl" name="videoUrl">
                            </div>
                            <div class="form-group">
                                <label class="control-label" for="exerciseSetsInput-@i">Sets</label>
                                <input type="number" class="form-control" id="exerciseSetsInput-@i" value="@Model.WorkoutExercises.ElementAt(i).Sets" name="sets">
                            </div>
                            <div class="form-group">
                                <label class="control-label" for="exerciseRepsInput-@i">Reps</label>
                                <input type="number" class="form-control" id="exerciseRepsInput-@i" value="@Model.WorkoutExercises.ElementAt(i).Reps" name="reps">
                            </div>
                            <div class="form-group">
                                <label class="control-label" for="exerciseResistanceInput-@i">Resistance</label>
                                <input type="text" class="form-control" id="exerciseResistanceInput-@i" value="@Model.WorkoutExercises.ElementAt(i).Resistance" name="resistance">
                            </div>
                            <div class="form-group">
                                <label class="control-label" for="exerciseNotesInput-@i">Notes</label>
                                <input type="text" class="form-control" id="exerciseNotesInput-@i" value="@Model.WorkoutExercises.ElementAt(i).Notes" name="notes">
                            </div>

                            <button type="submit" class="btn btn-default">Update</button>
                        </form>
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
                    </div>
                </div>
            </div>
        </div>
        <div class="panel panel-default">
            <div class="panel-heading" role="tab" id="collapse-heading-@i">
                <h4 class="panel-title">
                    <a role="button" data-toggle="collapse" data-parent="#collapse" href="#collapse-@i" aria-expanded="true" aria-controls="collapse-@i">
                        @Model.WorkoutExercises.ElementAt(i).Exercise.Name
                    </a>
                    <span class="btn-group pull-right btn-group-xs" role="group" aria-label="...">
                        <button type="button" class="btn btn-default btn-xs" data-toggle="modal" data-target="#updateExerciseModal-@i"><i class="fa fa-pencil-square" aria-hidden="true"> Edit</i></button>
                        <button type="button" class="btn btn-default btn-xs" onclick="deleteExerciseFromWorkout('@Model.WorkoutExercises.ElementAt(i).Id', '@Model.WorkoutExercises.ElementAt(i).Exercise.Name', '@Model.Id')"><i class="fa fa-trash" aria-hidden="true"> Delete</i></button>    
                    </span>
                </h4>
            </div>
            <div id="collapse-@i" class="panel-collapse collapse" role="tabpanel" aria-labelledby="collapse-heading-@i">
                <div class="panel-body">
                    <table class="table">
                        <thead>
                        <tr>
                            <th>Tool</th>
                            <th>Sets</th>
                            <th>Reps</th>
                            <th>Resistance</th>
                            <th>Description</th>
                            <th>Notes</th>
                            <th>Video</th>
                        </tr>
                        </thead>
                        <tbody>
                        <tr>
                            <td>@Model.WorkoutExercises.ElementAt(i).Exercise.Tool.Name</td>
                            <td>@Model.WorkoutExercises.ElementAt(i).Sets</td>
                            <td>@Model.WorkoutExercises.ElementAt(i).Reps</td>
                            <td>@Model.WorkoutExercises.ElementAt(i).Resistance</td>
                            <td>
                                <i class="fa fa-info-circle" onclick="showExerciseInfo('@Model.WorkoutExercises.ElementAt(i).Exercise.Description', 'Description')" data-toggle="tooltip" title="View description"></i>
                            </td>
                            <td>
                                <i class="fa fa-comments" onclick="showExerciseInfo('@Model.WorkoutExercises.ElementAt(i).Notes', 'Notes')" data-toggle="tooltip" title="View notes"></i>
                                <i class="fa fa-plus-circle" data-toggle="tooltip" title="Add note" onclick="updateNotes('@Model.WorkoutExercises.ElementAt(i).Id', '@Model.WorkoutExercises.ElementAt(i).Notes')"></i>
                            </td>
                            <td>
                                <i class="fa fa-video-camera" onclick="videoModal('@Model.WorkoutExercises.ElementAt(i).Exercise.VideoUrl')" data-toggle="tooltip" title="View video"></i>
                            </td>
                        </tr>
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    }
</div>

</div>
<script src="~/lib/jquery/dist/jquery.min.js">
</script>
<script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
<script src="~/lib/bootstrap/dist/js/bootstrap.min.js"></script>
<script src="~/js/site.js">
</script>
<script>
    const UrlSettings = {
        UpdateNotesUrl: '@Url.Action("UpdateExerciseNotes", "Workout")',
        DeleteExerciseUrl: '@Url.Action("DeleteExercise", "Workout")',
        CreateWorkoutPlan: '@Url.Action("Create", "WorkoutPlan")'
    }
</script>
</body>
</html>