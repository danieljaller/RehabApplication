                                </div>
                                <div class="modal-body">
                                    <form role="form" method="post" asp-controller="WorkoutPlan" asp-action="CreateWorkout" asp-route-workoutPlanId="@Model.ElementAt(i).Id">
                                        <div class="form-group">
                                            <label class="control-label" for="nameInput-@i">Name</label>
