@model IEnumerable<WorkoutPlan>


@for (var i = 0; i < Model.Count(); i++)
{
    <div class="modal fade" id="addWorkoutModal-@i" tabindex="-1" role="dialog" aria-labelledby="addWorkoutModal-label-@i">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <form role="form" method="post" asp-controller="Workout" asp-action="CreateWorkout" asp-route-workoutPlanId="@Model.ElementAt(i).Id">
                    <div class="modal-header">
                        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                            <span aria-hidden="true">&times;</span>
                        </button>
                        <h4 class="modal-title" id="addWorkoutModal-label-@i">New workout</h4>
                    </div>
                    <div class="modal-body">
                        <div class="form-group">
                            <label class="control-label" for="nameInput-@i">Name</label>
                            <input type="text" required class="form-control" id="nameInput-@i" name="name" placeholder="Enter name of workout">
                        </div>
                        <div class="form-group">
                            <label class="control-label" for="descriptionInput-@i">Description</label>
                            <input type="text" class="form-control" id="descriptionInput-@i" name="description" placeholder="Enter description for workout">
                        </div>
                            <label class="control-label" for="workoutDates-@i">Dates</label>
                        <div class="input-group date">
                            <input type="text" required id="workoutDates-@i" readonly class="form-control" name="dates" placeholder="Select one or more dates"><span class="input-group-addon">
                                <i class="fa fa-calendar-o"></i>
                            </span>
                        </div>
                        <div class="form-group">
                            <label class="control-label" for="workoutTime-@i">Time</label>
                            <input type="time" required class="form-control time" id="workoutTime-@i" name="time"/>
                        </div>
                        <hr />
                    </div>
                    <div class="modal-footer">
                        <button type="submit" class="btn btn-default">Submit</button>
                        <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
}