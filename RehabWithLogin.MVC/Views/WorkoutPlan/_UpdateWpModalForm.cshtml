@model IEnumerable<WorkoutPlan>

@for (var i = 0; i < Model.Count(); i++)
{
    <div class="modal fade" id="updateWPModal-@i" tabindex="-1" role="dialog" aria-labelledby="updateWPModal-@i-label">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <form role="form" id="updateWPForm-@i" method="post" asp-controller="WorkoutPlan" asp-action="Update" asp-route-id="@Model.ElementAt(i).Id">
                    <div class="modal-header">
                        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                            <span aria-hidden="true">&times;</span>
                        </button>
                        <h4 class="modal-title" id="updateModal-label-@i">Update workout plan</h4>
                    </div>
                    <div class="modal-body">
                        <div class="form-group">
                            <label class="control-label" for="inputName-@i">Name</label>
                            <input type="text" required class="form-control" id="updateName-@i" name="name" value="@Model.ElementAt(i).Name" placeholder="Enter name">
                        </div>
                        <div class="form-group">
                            <label class="control-label" for="inputDescription-@i">Description</label>
                            <textarea class="form-control" id="updateDescription-@i" name="description" placeholder="Enter description">@Model.ElementAt(i).Description</textarea>
                        </div>
                        <div id="updateFormMessage-@i" hidden></div>
                    </div>
                    <div class="modal-footer">
                        <button type="submit" id="submitUpdateWPFormBtn-@i" class="btn btn-default">Submit</button>
                        <button type="button" id="closeUpdateWPModal-@i" class="btn btn-default" data-dismiss="modal" onclick="reloadWindow()">Close</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
}